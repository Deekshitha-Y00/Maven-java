pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Deekshitha-Y00/Maven-java.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                bat 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'mvn test'
            }
        }

        stage('Docker Build & Run') {
            steps {
                echo 'Building Docker image...'
                bat 'docker build -t maven-java-app .'

                echo 'Stopping any existing container...'
                bat 'docker stop maven-java-app || echo "No running container"'
                bat 'docker rm maven-java-app || echo "No container to remove"'

                echo 'Running new container on port 8081'
                bat 'docker run -d --name maven-java-app -p 8081:8080 maven-java-app'
            }
        }

    }

    post {
        success {
            echo ' Pipeline completed successfully!'
        }
        failure {
            echo ' Pipeline failed. Check logs.'
        }
    }
}

